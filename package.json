{
  "name": "delta-components",
  "homepage": "https://alexndremelyanov.github.io/delta-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexndremelyanov/delta-components"
  },
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "start-storybook -c docs -p 6006 --ci",
    "lint": "npm run lint:static && npm run lint:format",
    "lint:format": "prettier ./{lib,docs}/**/*.{ts,tsx} --write",
    "lint:static": "eslint ./{lib,docs}/**/*.{ts,tsx} --fix",
    "test": "jest",
    "test:ci": "jest --coverage --silent --ci",
    "commit": "git-cz",
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "lint-staged": "lint-staged",
    "doc": "build-storybook -c docs -o dist/docs",
    "gh-pages": "gh-pages -d dist/docs",
    "prepare": "husky install",
    "acp": "git add . && npm run commit && git push",
    "semantic-release": "semantic-release --branches main"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.11",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.4.8",
    "@storybook/addon-docs": "^6.4.8",
    "@storybook/addon-essentials": "^6.4.8",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addon-storysource": "^6.4.8",
    "@storybook/builder-webpack5": "^6.4.8",
    "@storybook/manager-webpack5": "^6.4.8",
    "@storybook/react": "^6.4.8",
    "@testing-library/dom": "8.1.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.0",
    "@types/jest": "26.0.24",
    "@types/react-transition-group": "^4.4.4",
    "@types/react-virtualized": "^9.21.20",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-loader": "^8.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "autosize": "^5.0.1",
    "react-virtualized-auto-sizer": "^1.0.6",
    "react-transition-group": "^4.4.2",
    "react-window": "^1.8.6",
    "scroll-sync-react": "^1.2.0",
    "react-smooth-scroll-hook": "^1.3.4",
    "eslint": "^7.29.0",
    "eslint-config-next": "11.0.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-testing-library": "4.9.1",
    "formik": "^2.2.9",
    "gh-pages": "^3.2.3",
    "husky": "^6.0.0",
    "jest": "27.0.6",
    "js-cookie": "^3.0.1",
    "lint-staged": "11.0.1",
    "next": "^12.1.4",
    "prettier": "^2.4.1",
    "react-virtualized": "^9.22.3",
    "semantic-release": "^19.0.2",
    "ts-jest": "27.0.3",
    "ts-node": "^10.4.0",
    "tsup": "^5.10.3",
    "typescript": "4.3.5",
    "webpack": "^5.70.0",
    "yup": "^0.32.11"
  },
  "peerDependencies": {
    "@emotion/react": "^11.5.0",
    "@theme-ui/core": "^0.11.3",
    "react": "^17.0.2",
    "react-dnd": "^15.1.1",
    "react-dnd-html5-backend": "^15.1.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^0.6.3",
    "@theme-ui/color": "^0.13.0",
    "focus-trap-react": "^8.9.2",
    "react-icons": "^4.3.1",
    "simplebar-react": "^2.3.6"
  },
  "tsup": {
    "clean": true,
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "platform": "browser",
    "format": [
      "cjs",
      "esm"
    ],
    "entryPoints": [
      "lib/index.tsx"
    ]
  },
  "lint-staged": {
    "*.(tsx|ts)": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
